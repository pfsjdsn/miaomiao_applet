.area {
  width: calc(100% - 35rpx);
  height: 100rpx;
  margin: 20rpx;
  position: relative;
  border-bottom: 1px #b4b5b6 dashed;
}
.area .view {
  width: calc(100% - 100rpx);
  height: 100%;
  position: absolute;
  left: 100rpx;
  top: 0;
  line-height: 110rpx;
  text-indent: 10rpx;
  z-index: 2;
  background-color: #fff;
}
.area image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
}
.area .delete {
  width: 100rpx;
  height: 90rpx;
  background: red;
  color: #fff;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 1;
  margin-top: 5rpx;
  text-align: center;
  line-height: 90rpx;
}
